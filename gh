#!/usr/bin/env perl
# -*- mode: cperl -*-

use strict;
use autodie;
use warnings;

usage() if $#ARGV == -1;

my $cmd = shift @ARGV;

if ($cmd ~~ /^add$/) {
    print "~cmd is add\n";
}
elsif ($cmd ~~ /^(remove|rm)$/) {
    print "~cmd is $1\n";
}
elsif ($cmd ~~ /^l(ist)?$/) {
    print "~cmd is list\n";
}
else {
    usage() if $#ARGV > -1;

    print "~$cmd\n";
}

sub usage {
    print STDERR <<EOF;
~err: ur doin it rong.
EOF

    exit;
}

__END__

=head1 NAME

gh - manage multiple github accts

=head1 USEAGE

  > gh add bsdf ~/.ssh/id_rsa
    ~added bsdf

  > gh add bsdf2 ~/.ssh/id_rsa2
    ~added bsdf2

  > gh add bsdf3 ffff.txt
    ~err: key doesnt exist.

  > gh list
    ~bsdf
     bsdf2

  > gh bsdf2
    ~bsdf2

  > gh list
     bsdf
    ~bsdf2

  > gh bsdf3
    ~err: bsdf3 doesnt exist.

  > gh remove bsdf2
       or
  > gh rm bsdf2
    ~r u sure? y
    ~bye

=cut
